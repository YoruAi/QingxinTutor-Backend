<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yoru.qingxintutor.mapper.UserStudyPlanMapper">
    <sql id="tableName">
        user_study_plan
    </sql>

    <sql id="allColumns">
        id,
        user_id,
        subject_id,
        title,
        content,
        target_completion_time,
        reminder_time,
        create_time
    </sql>

    <resultMap id="UserStudyPlanResultMap" type="com.yoru.qingxintutor.pojo.entity.UserStudyPlanEntity">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="subjectId" column="subject_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="targetCompletionTime" column="target_completion_time"/>
        <result property="reminderTime" column="reminder_time"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="findById" resultMap="UserStudyPlanResultMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE id = #{id}
    </select>

    <select id="findByUserId" resultMap="UserStudyPlanResultMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <select id="findByUserIdAndSubjectId" resultMap="UserStudyPlanResultMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE user_id = #{userId} AND subject_id = #{subjectId}
        ORDER BY create_time DESC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        <include refid="tableName"/>
        (user_id, subject_id, title, content, target_completion_time, reminder_time)
        VALUES
        (#{userId}, #{subjectId}, #{title}, #{content}, #{targetCompletionTime}, #{reminderTime})
    </insert>

    <update id="update">
        UPDATE
        <include refid="tableName"/>
        <set>
            <if test="subjectId != null">
                subject_id = #{subjectId},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="targetCompletionTime != null">
                target_completion_time = #{targetCompletionTime},
            </if>
            <if test="reminderTime != null">
                reminder_time = #{reminderTime},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM
        <include refid="tableName"/>
        WHERE id = #{id}
    </delete>

    <select id="existsByUserIdAndTitle" resultType="boolean">
        SELECT EXISTS(
        SELECT 1 FROM user_study_plan
        WHERE user_id = #{userId} AND title = #{title}
        )
    </select>

    <select id="findByUserIdAndTitle" resultType="long">
        SELECT id FROM
        <include refid="tableName"/>
        WHERE user_id = #{userId} AND title = #{title}
    </select>
</mapper>